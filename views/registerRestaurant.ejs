<%- include('head') %>
<link rel="stylesheet" href="/stylesheets/registerRestaurant.css" />
<title>RESTAURANTS</title>
<%- include('navbar') %>

<main class="container-fluid">
  <section class="row css-section1">
    <div class="col-12 css-col1">
      <h1 class="h1-section1">BusinessMeeting</h1>
    </div>
    <div class="col-12 col-md-5 col-xl-3 css-col2">
      <p class="p-section1">
        Encuentra el restaurante perfecto para tu reunion de empresa.
      </p>
    </div>
    <div class="col-12 col-md-7 col-xl-9 css-col3">
      <hr class="hr-section1" />
    </div>
  </section>
  <section class="row css-section2">
    <div class="col-12 css-col4">
      <h1>Formulario de registro</h1>
      <form
        action="/restaurants/registerRestaurant"
        method="post"
        enctype="multipart/form-data"
        class="css-formulario"
      >
        <input
          type="text"
          name="restaurant_name"
          placeholder="Nombre del restaurante"
        />
        <input type="text" name="style" placeholder="Estilo del restaurante" />
        <input type="email" name="email" placeholder="Email" />
        <input type="password" name="password" placeholder="Contraseña" />
        <input
          type="password"
          name="password2"
          placeholder="Repita la contraseña"
        />
        <input
          type="text"
          name="restaurant_description"
          placeholder="Descripcion del restaurante"
        />
        <input type="text" name="phone_number" placeholder="Télefono" />
        <input type="file" name="img" />
        <h6 class="mensaje-errores"><%= typeof message != 'undefined' ? message : null %></h6>
        <div class="css-botones">
          <button>Aceptar</button>
          <button type="reset">Limpiar</button>
          <a href="/">
            <button type="button">Cancelar</button>
          </a>
        </div>
      </form>
    </div>
  </section>
  <section>
    <br>
  </section>
</main>
<%- include('footer') %>
