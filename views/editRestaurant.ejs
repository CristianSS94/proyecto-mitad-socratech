<%- include('head') %>
<link rel="stylesheet" href="/stylesheets/loginRestaurant.css" />
<title>Formulario edicion restaurantes</title>
<%- include('navbar') %>

<main class="container-fluid">
  <section class="row css-section1">
    <div class="col-12 css-col1">
      <h1 class="h1-section1">BusinessMeeting</h1>
    </div>
    <div class="col-12 col-md-5 col-xl-3 css-col2">
      <p class="p-section1">
        Encuentra el restaurante perfecto para tu reunion de empresa.
      </p>
    </div>
    <div class="col-12 col-md-7 col-xl-9 css-col3">
      <hr class="hr-section1" />
    </div>
  </section>
  <section class="row">
    <div class="col-12 css-col4">
      <h1>Formulario de edicion del restaurante</h1>
      <form
        action="/restaurants/editRestaurant/<%= result[0].restaurant_id %>"
        method="post"
        enctype="multipart/form-data"
        class="css-formulario"
      >
        <input
          type="text"
          name="restaurant_name"
          placeholder="Nombre del restaurante"
          value="<%= result[0].restaurant_name %>"
        />
        <input type="text" name="style" placeholder="Estilo del restaurante" value="<%= result[0].style %>"/>
        <input
          type="text"
          name="restaurant_description"
          placeholder="Descripcion del restaurante"
          value="<%= result[0].restaurant_description %>"
        />
        <input type="text" name="phone_number" placeholder="TÃ©lefono" value="<%= result[0].phone_number %>"/>
        <input type="file" name="img" />
        <h6><%= typeof message != 'undefined' ? message : null %></h6>
        <div class="css-botones">
          <button>Aceptar</button>
          <button type="reset">Limpiar</button>
          <a href="/restaurants/oneRestaurant/<%= result[0].restaurant_id %>">
            <button type="button">Cancelar</button>
          </a>
        </div>
      </form>
    </div>
  </section>
</main>
<%- include('footer') %>
